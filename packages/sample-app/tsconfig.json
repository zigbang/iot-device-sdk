{
    "extends": "../../tsconfig.default.json",
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.js",
        "**/*.jsx",
        "**/*.spec.ts",
        "**/*.test.ts"
